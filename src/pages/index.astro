---
import Project from "../components/Project.astro";
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    title: "Plus 91 Cafe",
    description: "A client website for a local cafe, built with Astro",
    url: "https://www.plus91cafe.co.nz",
  },
  {
    title: "Schedule TV",
    description:
      "An internal tool and hub to schedule Learn with Jason episode, aggregate data and generate content, build on vite with React-router",
    url: "https://lucky-horse-8fa6b6.netlify.app/",
  },
  {
    title: "Digibrain",
    description:
      "A simple bookmark tracking application, powerd by N8N automation for summaries and tags, built with Next.js, Bun & N8n",
    url: "https://digibrain.win/",
  },
];
---

<Layout>
  <main class="max-w-2xl mx-auto px-6 py-12">
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-red-400">Aodhan Hamilton</h1>
      <p class="text-gray-600">Software Developer and curious human</p>
      <div class="py-2 flex gap-2">
        <a href="https://github.com/MVAodhan" target="_blank">
