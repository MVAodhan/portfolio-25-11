---
const { project } = Astro.props;
---

<article class="mb-8">
  <h3 class="text-xl font-medium mb-2">
    <a
      href={project.url}
      target="_blank"
      class="hover:text-blue-600 transition-colors"
    >
      {project.title}
    </a>
  </h3>
  <!-- <div class="text-gray-600 text-sm mb-3">July 31, 2025</div> -->
  <p class="text-gray-700 mb-4">
    {project.description}
  </p>
</article>
